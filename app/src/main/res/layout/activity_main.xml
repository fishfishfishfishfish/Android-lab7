<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chan.android_lab7.MainActivity">

    <EditText
        android:id="@+id/NPW_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:hint="New Password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/CPW_EditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />
    <EditText
        android:id="@+id/CPW_EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        app:layout_constraintTop_toBottomOf="@id/NPW_EditText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/OK_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        app:layout_constraintTop_toBottomOf="@+id/CPW_EditText"
        app:layout_constraintLeft_toLeftOf="@id/CPW_EditText" />
    <Button
        android:id="@+id/Clear_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        app:layout_constraintTop_toBottomOf="@+id/CPW_EditText"
        app:layout_constraintLeft_toRightOf="@id/OK_Btn"
        android:layout_marginLeft="10px"/>
</android.support.constraint.ConstraintLayout>
